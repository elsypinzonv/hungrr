<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_main_1"
    tools:context=".view.activities.DispatchActivity" >

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="60sp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_facebook_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/dispatchButtonsWrapper"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:background="@color/colorFacebookBlue"
        android:textColor="@color/colorFacebookText"
        android:text="@string/lbl_facebook_signup"
        style="@style/FacebookLoginButton"/>

    <include
        layout="@layout/custom_bottom_buttons_bar"
        android:id="@+id/dispatchButtonsWrapper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
