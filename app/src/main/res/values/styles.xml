<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <!-- CUSTOM THEMES -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar"/>

    <style name="LoginTheme" parent="AppTheme.NoActionBar" />

    <style name="TranslucentStatusTheme" parent="AppTheme.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="HungryLevelTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="BudgetTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorTeal</item>
        <item name="colorPrimaryDark">@color/colorTealDark</item>
        <item name="colorAccent">@color/colorRed</item>
    </style>

    <!-- WIDGETS -->
    <style name="FacebookLoginButton">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">249dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="DispatchButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="TextInputLayoutStyle">
        <!-- Hint color and label color in FALSE state
        <item name="android:textColorHint">@color/colorBlue</item>
        <item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorBlue</item>
        <item name="colorControlActivated">@color/colorBlue</item>
    </style>

</resources>
